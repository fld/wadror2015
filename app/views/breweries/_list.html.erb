<table class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to 'Name', breweries_path(order:"name", reverse: params[:reverse] == "false") %></th>
      <th><%= link_to 'Year', breweries_path(order:"year", reverse: params[:reverse] == "false") %></th>
    </tr>
  </thead>

  <tbody>
    <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, "breweries/#{brewery.id}" %></td>
        <td><%= brewery.year %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery), class:'btn btn-warning' if current_user %></td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>