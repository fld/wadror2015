<p id="notice"><%= notice %></p>

<h1>Listing Beerclubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beerclubs.each do |beerclub| %>
      <tr>
        <td><%= link_to beerclub.name, beerclub %></td>
		  <td><%= beerclub.founded %></td>
        <td><%= beerclub.city %></td>
        <% if not session[:user_id].nil? %>
          <td><%= link_to 'Join', new_membership_path %></td>
        <% end %>
		  <td><%= link_to 'Destroy', beerclub, method: :delete, data: { confirm: 'Are you sure?' } if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beerclub', new_beerclub_path if current_user %>
